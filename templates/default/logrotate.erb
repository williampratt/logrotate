# Generated by Chef for <%= node['fqdn'] %>
<% @path.each do |p| -%>
<%= p %> {
  
<%- if @size %>
  size <%= @size %>
<%- else %>
  <%= @frequency %>
<%- end %>
  rotate <%= @rotate %>
<%- if @create %>
  create <%= @create %>
<%- end %>
<% @options.each do |o| -%>
  <%= o %>
<% end -%>
<%- if @sharedscripts %>
  sharedscripts
<%- end %>
<%- if @postrotate %>
  postrotate
<%= @postrotate %>
  endscript
<%- end %>
<%- if @prerotate %>
  prerotate
<%= @prerotate %>
  endscript
<%- end %>
<%- if @firstaction %>
  firstaction
<%= @firstaction %>
  endscript
<%- end %>
<%- if @lastaction %>
  lastaction
<%= @lastaction %>
  endscript
<%- end %>
}
<%- end %>
